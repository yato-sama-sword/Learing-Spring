<?xml version="1.0" encoding="UTF-8"?>
<beans>

    <bean id="UserDao" class="edu.neu.spring.beans.UserDao"/>

    <bean class="edu.neu.spring.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="edu.neu.spring.beans.UserDaoBeforeAdvice"/>

    <bean id="methodInterceptor" class="edu.neu.spring.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="pointcutAdvisor" class="edu.neu.spring.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* edu.neu.spring.beans.IUserDao.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>

</beans>